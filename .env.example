# Environment Configuration
NODE_ENV=development

# Server
PORT=3000

# Database (Supabase PostgreSQL)
# Get your connection string from Supabase Dashboard > Settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Alternative: Individual database variables (for local development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bra_shop
# DB_USER=postgres
# DB_PASSWORD=

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://shopbeha.com

# Email (Optional - for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@shopbeha.com

# Logging
LOG_LEVEL=info

# Google Sheets Webhook (for Contact Form)
# Get this URL after deploying your Google Apps Script
# See GOOGLE_SHEETS_SETUP.md for detailed instructions
GOOGLE_SHEETS_WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
GOOGLE_SHEETS_SECRET_TOKEN=your-optional-secret-token-for-extra-security

DATABASE_URL=your_supabase_connection_string                               
JWT_SECRET=your_jwt_secret                                                 
JWT_REFRESH_SECRET=your_refresh_secret                                     
STRIPE_SECRET_KEY=sk_live_...                                              
STRIPE_WEBHOOK_SECRET=whsec_...                                            
ALLOWED_ORIGINS=https://shopbeha.com 